# ==============================================
# Otto AI Platform - Environment Configuration
# ==============================================

# Application Settings
NODE_ENV=development
PORT=3000
BASE_URL=https://ottoaiagent.com

# Database (PostgreSQL)
DATABASE_URL=postgresql://username:password@localhost:5432/ottoai
POSTGRES_URL=postgresql://username:password@localhost:5432/ottoai

# Authentication & Security
JWT_SECRET=your-super-secret-jwt-key-minimum-32-characters-long

# ElevenLabs AI Voice (Otto Agent)
ELEVENLABS_API_KEY=sk_your_elevenlabs_api_key_here
ELEVENLABS_OUTBOUND_AGENT_ID=agent_your_outbound_agent_id_here

# Twilio Phone System
TWILIO_ACCOUNT_SID=ACyour_twilio_account_sid_here
TWILIO_AUTH_TOKEN=your_twilio_auth_token_here
TWILIO_PHONE_NUMBER=+18884118568
TWILIO_OUTBOUND_NUMBER=+19257226886

# OpenAI (GPT-4 for intent analysis)
OPENAI_API_KEY=sk-your_openai_api_key_here

# Google Services (for Calendar & Sheets)
GOOGLE_SERVICE_ACCOUNT_EMAIL=your-service-account@project.iam.gserviceaccount.com
GOOGLE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nYOUR_PRIVATE_KEY_HERE\n-----END PRIVATE KEY-----\n"
GOOGLE_CLIENT_EMAIL=your-service-account@project.iam.gserviceaccount.com
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CALENDAR_ID=your_calendar_id@group.calendar.google.com

# VIN Decoding Services
VINAUDIT_API_KEY=your_vinaudit_api_key
RAPIDAPI_KEY=your_rapidapi_key_for_vin_services

# n8n Workflow Automation
N8N_WEBHOOK_URL=https://your-n8n-instance.com/webhook

# Email Services (if using SMTP)
SMTP_HOST=smtp.your-provider.com
SMTP_PORT=587
SMTP_USER=your-email@domain.com
SMTP_PASS=your-email-password
FROM_EMAIL=noreply@ottoaiagent.com

# Development/Debug Settings
DEBUG_MODE=false
LOG_LEVEL=info
ENABLE_CORS=true

# ==============================================
# Production Notes:
# - Change BASE_URL to your production domain
# - Use strong, unique JWT_SECRET (32+ chars)
# - Set NODE_ENV=production
# - Ensure all API keys are from production accounts
# - Update webhook URLs in Twilio/ElevenLabs dashboards
# ==============================================
